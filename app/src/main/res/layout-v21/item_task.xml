<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_task"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:background="@color/material_color_pink_300"
        android:id="@+id/rl_task"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/iv_task_hint"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_task_1"/>

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textColor="@color/material_color_white"
            android:textSize="19sp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/tv_task_hint"
            android:layout_alignStart="@+id/tv_task_hint"
            android:layout_marginTop="8dp"/>

        <TextView
            android:textColor="@color/material_color_white"
            android:id="@+id/tv_task_hint"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@+id/tv_task_title"
            android:layout_toRightOf="@+id/iv_task_hint"
            android:layout_toEndOf="@+id/iv_task_hint"/>

        <TextView
            android:id="@+id/tv_task_finish"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/material_color_yellow_700"/>

