<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:id="@+id/iv_task_hint"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:focusable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/img_goal_1"/>

        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/tv_task_hint"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_task_hint"
            android:gravity="center_vertical"
            android:text="高数课"
            android:textColor="@color/material_color_black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_task_hint"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/iv_task_hint"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@+id/iv_task_hint"
            android:layout_toRightOf="@+id/iv_task_hint"
            android:text="啥你高数还没过？"/>

        <TextView
            android:id="@+id/tv_task_finish"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:text="完成"
            android:textColor="@color/material_color_pink_700"/>
        <TextView
            android:text="@string/vertical_ellipsis"
            android:id="@+id/bt_task_popup"
            android:textSize="16sp"
            android:textColor="@color/material_color_black"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/tv_task_title"
            android:layout_alignBottom="@+id/tv_task_title"
            android:layout_alignRight="@+id/tv_task_finish"
            android:layout_alignEnd="@+id/tv_task_finish"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
